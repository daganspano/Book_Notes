<form class="search_grid br" action="/search" method="GET">
  <div class="form_input search">
    <label for="search">Search</label>
    <input
      type="text"
      id="search"
      name="search"
      placeholder="Search for the title, author, or ISBN"
      value="<%= search || null %>"
    />
  </div>

  <div class="form_input rating">
    <label for="rating">Rating</label>
    <input
      type="number"
      id="rating"
      name="rating"
      min="0"
      max="10"
      value="<%= rating || null %>"
    />
  </div>

  <input class="button search_button" type="submit" value="Search" />
</form>
